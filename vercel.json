{
  "public": "public",
  "buildCommand": "echo 'Static deployment'",
  "outputDirectory": "public",
  "cleanUrls": false,
  "rewrites": [
    { "source": "/website/(.*)", "destination": "/website/$1" }
  ],
  "headers": [
    {
      "source": "/(.*)\\.ps1",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain; charset=utf-8"
        }
      ]
    },
    {
      "source": "/website/(.*)\\.html",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/html; charset=utf-8"
        }
      ]
    }
  ]
}
